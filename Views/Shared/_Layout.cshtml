<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - khmer25.com_project</title>

    <!-- Bootstrap + Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/khmer25.com_project.styles.css" asp-append-version="true" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Fasthand&family=Hanuman:wght@100..900&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Khmer&family=Koh+Santepheap:wght@100;300;400;700;900&family=Outfit:wght@100..900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">

    <style>
        body {
            overflow-x: hidden;
            font-family: 'Hanuman', 'Koh Santepheap', 'Roboto', 'Inter', 'Outfit', 'Fasthand', 'Khmer', sans-serif;
            padding-top: 70px;
            /* 🟢 Fix content hidden behind navbar */
        }

        /* ✅ Fix navbar & modal z-index issue */
        .navbar.fixed-top {
            z-index: 1080 !important;
            background-color: #fff !important;
        }

        .modal {
            z-index: 1100 !important;
        }

        /* Sidebar styles */
        .side-bar {
            position: fixed;
            top: 0;
            left: -250px;
            width: 250px;
            height: 100%;
            background-color: #343a40;
            color: white;
            transition: left 0.3s ease;
            z-index: 1200;
            padding-top: 60px;
        }

        .side-bar.active {
            left: 0;
        }

        .side-bar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 12px 20px;
            transition: background 0.2s;
        }

        .side-bar a:hover {
            background: rgba(255, 255, 255, 0.1);
            padding-left: 25px;
            transition: padding-left 0.2s;
        }

        /* Overlay (background dim when sidebar open) */
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: none;
            z-index: 1150;
        }

        .overlay.active {
            display: block;
        }

        .search-icon {
            font-size: 1.3rem;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-5 fixed-top shadow-sm">
            <div class="container d-flex justify-content-between align-items-center">

                <!-- Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Logo</a>

                <!-- Desktop Menu -->
                <ul class="navbar-nav d-lg-flex d-sm-none d-md-none d-none flex-row gap-5 mb-0">
                    <li><a class="text-decoration-none text-secondary" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house px-2"></i> ទំព័រដើម</a></li>
                    <li><a class="text-decoration-none text-secondary" asp-controller="Home" asp-action="Category">
                            <i class="bi bi-ui-checks-grid px-2"></i> ប្រភេទផលិតផល</a></li>
                    <li><a class="text-decoration-none text-secondary" asp-controller="Home" asp-action="Promotion">
                            <i class="bi bi-percent px-2"></i> ការបញ្ចុះតម្លៃ</a></li>
                    <li><a class="text-decoration-none text-secondary" asp-controller="Home" asp-action="NewProducts">
                            <i class="bi bi-megaphone px-2"></i> ផលិតផលថ្មី</a></li>
                </ul>

                <!-- Search box (Desktop) -->
                <div class="input-group d-none d-md-flex" style="max-width: 200px;">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" placeholder="ស្វែងរកផលិតផល..." />
                </div>

                <!-- Right icons -->
                <div class="d-flex align-items-center gap-3">

                    <!-- Mobile Search Icon -->
                    <div type="button" class="d-lg-none" data-bs-toggle="modal" data-bs-target="#studentModal">
                        <i class="bi bi-search fs-5"></i>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="studentModal" tabindex="-1" aria-labelledby="studentModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <form>
                                        <div class="mb-3 text-start">
                                            <label for="studentName" class="form-label">ស្វែងរកផលិតផលនៅទីនេះ
                                                <span class="text-danger">*</span></label>
                                            <input type="text" id="studentName" class="form-control"
                                                placeholder="ស្វែងរក...">
                                        </div>
                                        <div class="mb-3 text-center">
                                            <p class="text-success">មិនមានផលិតផល</p>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Icons -->
                    <a asp-controller="Home" asp-action="Cart"><i class="bi bi-cart fs-3 text-muted"></i></a>
                    <a asp-controller="Home" asp-action="InviteFriend"><i class="bi bi-people fs-3 text-muted"></i></a>

                    <!-- Menu Button -->
                    <button id="menu-btn" class="btn btn-outline-secondary">
                        <i class="bi bi-list"></i>
                    </button>
                </div>
            </div>
        </nav>

        <!-- Sidebar -->
        <div class="side-bar" id="sidebar">
            <h4 class="text-center mb-4">មុឺនុយ</h4>
            <a asp-controller="Home" asp-action="Profile"><i class="bi bi-person p-2"></i> ប្រវត្តិរូប</a>
            <a asp-controller="Home" asp-action="Favorite"><i class="bi bi-heart p-2"></i> ចំណូលចិត្ត</a>
            <a asp-controller="Home" asp-action="Delivery"><i class="bi bi-truck p-2"></i> ព័ត៌មានការដឹកជញ្ជូន</a>
            <a asp-controller="Home" asp-action="Order"><i class="bi bi-clock p-2"></i> ប្រវត្តិការបញ្ជាទិញ</a>
            <a asp-controller="Home" asp-action="Contact"><i class="bi bi-envelope p-2"></i> ទំនាក់ទំនង</a>
            <a asp-controller="Home" asp-action="InviteFriend"><i class="bi bi-share p-2"></i> អញ្ជើញមិត្តភក្តិ</a>
            <a asp-controller="Home" asp-action="SignIn"><i class="bi bi-box-arrow-in-right p-2"></i> ចូលគណនី</a>
        </div>

        <!-- Overlay -->
        <div class="overlay" id="overlay"></div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - khmer25.com_project -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Sidebar Toggle -->
    <script>
        const sidebar = document.getElementById("sidebar");
        const overlay = document.getElementById("overlay");
        const menuBtn = document.getElementById("menu-btn");

        menuBtn.addEventListener("click", () => {
            sidebar.classList.toggle("active");
            overlay.classList.toggle("active");
        });

        overlay.addEventListener("click", () => {
            sidebar.classList.remove("active");
            overlay.classList.remove("active");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>