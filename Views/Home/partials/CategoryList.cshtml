<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Product Categories</title>
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .category-box {
            text-align: center;
            margin-bottom: 20px;
        }

        .category-box img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 15px;
            margin-bottom: 10px;
        }

        .category-title {
            font-weight: bold;
        }
    </style>
</head>

<body>

    <div class="container py-5">
        <div class="row justify-content-center">

            <!-- Category Item Start -->
            <div class="col-6 col-sm-4 col-md-3 col-lg-2 category-box">
                <img src="your_image_path/KHMER_PRODUCTS.png" alt="Khmer Products">
                <div class="category-title">Khmer Products</div>
            </div>

            <div class="col-6 col-sm-4 col-md-3 col-lg-2 category-box">
                <img src="your_image_path/MEAL_PACKAGES.png" alt="Meal Packages">
                <div class="category-title">Meal Packages</div>
            </div>

            <div class="col-6 col-sm-4 col-md-3 col-lg-2 category-box">
                <img src="your_image_path/MEAT.png" alt="Meat">
                <div class="category-title">Meat</div>
            </div>

            <div class="col-6 col-sm-4 col-md-3 col-lg-2 category-box">
                <img src="your_image_path/VEGETABLES.png" alt="Vegetables">
                <div class="category-title">Vegetables</div>
            </div>

            <div class="col-6 col-sm-4 col-md-3 col-lg-2 category-box">
                <img src="your_image_path/GROCERY.png" alt="Grocery">
                <div class="category-title">Grocery</div>
            </div>

            <div class="col-6 col-sm-4 col-md-3 col-lg-2 category-box">
                <img src="your_image_path/FRUIT.png" alt="Fruit">
                <div class="category-title">Fruit</div>
            </div>

            <div class="col-6 col-sm-4 col-md-3 col-lg-2 category-box">
                <img src="your_image_path/HOUSEHOLD_ITEMS.png" alt="Household Items">
                <div class="category-title">Household Items</div>
            </div>

            <div class="col-6 col-sm-4 col-md-3 col-lg-2 category-box">
                <img src="your_image_path/COSMETICS.png" alt="Cosmetics">
                <div class="category-title">Cosmetics</div>
            </div>

            <div class="col-6 col-sm-4 col-md-3 col-lg-2 category-box">
                <img src="your_image_path/COOKED_FOOD.png" alt="Cooked Food">
                <div class="category-title">Cooked Food</div>
            </div>

            <div class="col-6 col-sm-4 col-md-3 col-lg-2 category-box">
                <img src="your_image_path/DRINKS.png" alt="Drinks">
                <div class="category-title">Drinks</div>
            </div>

            <div class="col-6 col-sm-4 col-md-3 col-lg-2 category-box">
                <img src="your_image_path/KID_PRODUCT.png" alt="Kid Product">
                <div class="category-title">Kid Product</div>
            </div>

            <div class="col-6 col-sm-4 col-md-3 col-lg-2 category-box">
                <img src="your_image_path/KHMER_RICE.png" alt="Khmer Rice">
                <div class="category-title">Khmer Rice</div>
            </div>
            <!-- Category Item End -->

        </div>
    </div>

</body>

</html>